<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_img"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg_smallimg" />

        <LinearLayout
            android:layout_width="205.8dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cultural_d_day"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/d_day_text_background"
                android:gravity="center"
                android:text=""
                android:textColor="#ee7e1a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/cultural_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cultural_g_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cultural_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />

            <com.like.LikeButton
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon_size="20dp"
                app:icon_type="heart" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>